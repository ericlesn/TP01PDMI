<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP01PDMI.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Aplicação teste" FontSize="Title" HorizontalTextAlignment="Center" Padding="30,30,30,30"/>
            <Label Text="Id" FontSize="20" Padding="30,10,30,10"/>
            <Entry x:Name="user"/>

            <Label Text="Pass" FontSize="20" Padding="30,0,30,0"/>
            <Entry x:Name="senha"  IsPassword="True" />

            <Button Text="Entrar" Clicked="btnEntrar"/>
            <Button Text="Limpar" Clicked="btnLimpar"/>
            <Button Text="Créditos" Clicked="btnCreditos"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>